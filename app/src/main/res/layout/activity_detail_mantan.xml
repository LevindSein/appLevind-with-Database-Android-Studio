<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".DetailMantanActivity">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        app:civ_shadow="true"
        app:civ_shadow_gravity="bottom"
        android:layout_marginBottom="35dp"
        android:src="@mipmap/ic_launcher"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/txt_name_mantan"
                android:layout_width="match_parent"
                android:text="OP"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/quick_writing"
                android:textSize="35sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_asal"
                android:layout_width="match_parent"
                android:text="OP"
                android:gravity="center"
                android:fontFamily="@font/please_me"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_keahlian"
                android:layout_width="match_parent"
                android:text="OP"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/please_me"
                android:textSize="30sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_deskripsi"
                android:layout_width="match_parent"
                android:text="OP"
                android:gravity="center"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/please_me"
                android:textSize="27sp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>